<div class="container mt-5" style="width: 30rem">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Update Profile</h5>
            {{#each rows}}
            <form action="/editprofile/{{this.id}}" method="POST" encType="multipart/form-data" ref="uploadForm">
                {{> user-form}}
                <div class="mb-2">
                    <input type="file" name="sampleFile" />
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
                <div><a class="nav-link active" aria-current="page" href="/viewprofile/{{this.id}}">Back to Profile</a>
                </div>
            </form>
            {{/each}}
        </div>
    </div>
